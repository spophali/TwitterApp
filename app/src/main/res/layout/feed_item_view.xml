<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/feed_item_view_height"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        app:shapeAppearanceOverlay="@style/circleImageView"
        android:id="@+id/profile_pic_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:strokeWidth="2dp"
        app:strokeColor="@android:color/holo_blue_light"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintWidth_percent="0.08"
        android:src="@drawable/ic_notifications_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/name_tv"
        app:layout_constraintStart_toEndOf="@id/profile_pic_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Sumedh"
        android:textSize="20sp"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/bluetick_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="visible"
        android:layout_marginStart="5dp"
        android:src="@drawable/blue_tick_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/name_tv"/>
    <TextView
        android:id="@+id/username_tv"
        app:layout_constraintStart_toEndOf="@id/bluetick_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        android:text="sumpop"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/date_tv"
        app:layout_constraintStart_toEndOf="@id/username_tv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        android:text="July 7"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/description_tv"
        app:layout_constraintTop_toBottomOf="@id/name_tv"
        app:layout_constraintStart_toEndOf="@id/profile_pic_iv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textSize="12sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Save Nature! Save Life!"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/comment_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/outline_comment_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/like_iv"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <ImageView
        android:id="@+id/like_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/like_image"
        app:layout_constraintStart_toEndOf="@id/comment_iv"
        app:layout_constraintEnd_toStartOf="@id/retweet_iv"
        app:layout_constraintHorizontal_chainStyle="spread"/>
    <ImageView
        android:id="@+id/retweet_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/retweet_image"
        app:layout_constraintStart_toEndOf="@id/like_iv"
        app:layout_constraintEnd_toStartOf="@id/views_iv"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <ImageView
        android:id="@+id/views_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/views_image"
        app:layout_constraintStart_toEndOf="@id/retweet_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <TextView
        android:id="@+id/comments_tv"
        app:layout_constraintStart_toEndOf="@id/comment_iv"
        app:layout_constraintTop_toTopOf="@id/comment_iv"
        app:layout_constraintBottom_toBottomOf="@id/comment_iv"
        android:text="27"
        android:layout_marginStart="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/like_tv"
        app:layout_constraintStart_toEndOf="@id/like_iv"
        app:layout_constraintTop_toTopOf="@id/like_iv"
        app:layout_constraintBottom_toBottomOf="@id/like_iv"
        android:text="27"
        android:layout_marginStart="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/retweet_tv"
        app:layout_constraintStart_toEndOf="@id/retweet_iv"
        app:layout_constraintTop_toTopOf="@id/retweet_iv"
        app:layout_constraintBottom_toBottomOf="@id/retweet_iv"
        android:text="27"
        android:layout_marginStart="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/views_tv"
        app:layout_constraintStart_toEndOf="@id/views_iv"
        app:layout_constraintTop_toTopOf="@id/views_iv"
        app:layout_constraintBottom_toBottomOf="@id/views_iv"
        android:text="27"
        android:layout_marginStart="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>